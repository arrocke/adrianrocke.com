{
  "name": "adrianrocke.com",
  "version": "0.1.0",
  "description": "Adrian Rocke's personal website.",
  "scripts": {
    "build:styles": "tailwind build ./src/css/styles.css -c ./tailwind.js -o ./dist/styles.css",
    "build:html": "pug -o ./dist -b ./src/html --silent ./src/html/pages",
    "build:img": "cp -a ./src/img/* ./dist/img/",
    "build": "npm run build:html && npm run build:styles && npm run build:img",
    "dev": "http-server ./dist & nodemon -w src --exec 'npm run build' -e 'pug css jpg png svg' && fg",
    "clean": "rm -rf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arrocke/adrianrocke.com.git"
  },
  "author": "Adrian Rocke",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arrocke/adrianrocke.com/issues"
  },
  "homepage": "https://github.com/arrocke/adrianrocke.com#readme",
  "devDependencies": {
    "http-server": "0.11.1",
    "nodemon": "1.18.9",
    "pug": "2.0.3",
    "pug-cli": "1.0.0-alpha6",
    "tailwindcss": "0.7.4"
  }
}
